<section id="fake-input" class="p-4">
  <h1 class="text-2xl font-semibold mb-4">Generate fake value</h1>
  <form action="<%= fake_inputs_path %>" method="POST">
    <div class="flex flex-wrap mb-4">
      <label for="value">Value</label> 
      <input type="number" id="value" name="value">
    </div>

    <div class="flex flex-wrap mb-4">
      <input type="submit" class="bg-gray-800 text-white px-4 py-2 rounded">
    </div>
  </form>
</section>
