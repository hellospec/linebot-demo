<section id="rfm-uploads">
  <div class="mb-4">
    <div class="max-w-[720px] grid grid-cols-3">
      <div>Uploaded at</div>
      <div>Filename</div>
      <div></div>
    </div>
    <% @rfm_uploads.each do |item| %>
      <div class="max-w-[720px] grid grid-cols-3">
        <div><%= item.created_at.strftime("%F %R") %></div>
        <div><%= item.name %></div>
        <div class="text-sm text-gray-400"><%= link_to "Remove", rfm_upload_path(item), data: {"turbo-method": "delete"} %></div>
      </div>
    <% end %>
  </div>

  <div class="my-4 pt-4 border-t-2 border-t-gray-400">
    <turbo-frame id="rfm-upload">
      <a href="<%= new_rfm_upload_path %>" role="button" class="underline">Upload RFM report</a>
    </turbo-frame>
  </div>
</section>

